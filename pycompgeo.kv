<PyCompGeoMainWindow>:
    canvas.before:
        Color:
            rgba: (138/255, 167/255, 169/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
            
<PyCompGeoMainWindow>:
    Image:
        source: 'logo.png'
        size: self.texture_size
        allow_stretch: True
        height: 300
        size_hint_y: None

<PyCompGeoMainWindow>:
    Label:
        text: "Welcome to PyCompGeo!"
        font_size: "20dp"
        color: 0,0,0,1
<PyCompGeoMainWindow>:
    Label:
        text: "Please Select From The Dropdown to Begin Your Calculation!"
        color: 0,0,0,1



